{
    "compilerOptions": {
        "outDir": "./dist", // for tsc cmd
        "declarationDir": "./dist/types",
        "declaration": true,
        // "declarationMap": true,

        "allowJs": false,
        "checkJs": false,

        "strict": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        // "noUnusedLocals": true,
        "noImplicitAny": true,

        "module": "commonjs",
        "target": "ES5",
        // "target": "ESNext",
        "jsx": "react",
        "lib": [
            "ES5", "ES6", "ES7", "ES2015", "ES2017", "ES2018", "ESNext",
            "DOM", "DOM.Iterable",
            // "WebWorker", //giving me error!!
            "ScriptHost",
            "ES2015.Core", "ES2015.Collection", "ES2015.Generator", "ES2015.Iterable", "ES2015.Promise",
            "ES2015.Proxy", "ES2015.Reflect", "ES2015.Symbol", "ES2015.Symbol.WellKnown",
            "ES2016.Array.Include",
            "ES2017.object", "ES2017.Intl", "ES2017.SharedMemory", "ES2017.String", "ES2017.TypedArrays",
            "ES2018.Intl", "ES2018.Promise", "ES2018.RegExp",
            "ESNext.AsyncIterable", "ESNext.Array", "ESNext.Intl", "ESNext.Symbol"
        ],
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/@types/*",
                "client/types/staticAssests.d.ts",
                "server/types/*"
            ]
        }
    },
    "include": [
        "./client/**/*",
        "./server/**/*"
    ]
}
